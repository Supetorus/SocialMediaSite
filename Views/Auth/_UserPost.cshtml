@using System.Security.Claims
@model UserPost

@*
	For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<div>
	<p>@Model.PosterName Posted this to @Model.PostedName on @Model.PostDate</p>
	@if (Model.PosterID != Model.PostedID)
	{
		<a href="/u/@Model.PosterName">@Model.PosterName</a>
	}
	<p>@Model.Text</p>
	@if (Model.ImageID != null)
	{
		<img src="@Model.ImageID" />
	}
	@if (User.FindFirstValue(ClaimTypes.NameIdentifier) == Model.PosterID)
	{
		<a href="/p/Edit/@Model.Id">Edit Post</a>
	}
	@if (User.FindFirstValue(ClaimTypes.NameIdentifier) == Model.PosterID
		|| User.FindFirstValue(ClaimTypes.NameIdentifier) == Model.PostedID)
	{
		<a href="/p/Delete/@Model.Id">Delete Post</a>
	}
</div>